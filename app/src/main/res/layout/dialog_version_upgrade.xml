<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent">

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="320dp"
            android:layout_alignTop="@+id/dialog_version_upgrade_top_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="106dp"
            android:background="@drawable/dialog_version_upgrade_white_layout">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/dialog_version_upgrade_btn_layout"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/dialog_version_upgrade_content_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="5dp"
                    android:text=""
                    android:textColor="@color/cl_gray1"
                    android:textSize="14sp" />

            </ScrollView>

            <LinearLayout
                android:id="@+id/dialog_version_upgrade_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dialog_version_upgrade_btn_cancel"
                    style="@style/common_button"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/btn_dialog_version_upgrade_white"
                    android:textColor="#FF4E00" />

                <Button
                    android:id="@+id/dialog_version_upgrade_btn_upgrade"
                    style="@style/common_button"
                    android:background="@drawable/btn_dialog_version_upgrade_orange"
                    android:text="立即升级"
                    android:textColor="@color/white" />

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/dialog_version_upgrade_top_image"
            android:layout_width="260dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/dialog_version_upgrade_top" />

        <ImageView
            android:id="@+id/iv_version_upgrade_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_circle_close" />

    </RelativeLayout>

</RelativeLayout>